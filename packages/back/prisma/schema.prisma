generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Settings

enum Theme {
  LIGHT
  DARK
  AUTO
}

enum Locale {
  EN
  FR
}

enum KeyboardLayout {
  AZERTY
  QWERTY
}

// *** //

enum Role {
  USER
  ADMIN
}

enum Plan {
  FREE
  PAID
}

model User {
  id             Int            @id @default(autoincrement())
  role           Role           @default(USER)
  plan           Plan           @default(FREE)
  name           String?
  email          String         @unique
  theme          Theme          @default(AUTO)
  locale         Locale         @default(EN)
  keyboardLayout KeyboardLayout @default(QWERTY)
  showKb         Boolean        @default(true)
}
