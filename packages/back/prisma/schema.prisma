generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Settings

enum Theme {
  LIGHT
  DARK
  AUTO
}

enum Locale {
  EN
  FR
}

enum KeyboardLayout {
  AZERTY
  QWERTY
}

model UserSettings {
  id             Int             @id @default(autoincrement())
  name           String?
  theme          Theme           @default(AUTO)
  locale         Locale          @default(EN)
  keyboardLayout KeyboardLayout  @default(QWERTY)
  showKb         Boolean         @default(true)
  credential     UserCredential?
}

// *** //

enum Role {
  USER
  ADMIN
}

model UserCredential {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  password   String
  role       Role         @default(USER)
  settings   UserSettings @relation(fields: [settingsId], references: [id])
  settingsId Int          @unique @map("userId")
}
